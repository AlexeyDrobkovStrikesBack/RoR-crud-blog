<div id="<%= dom_id post %>">
  ____________________________
  <p>
    <strong>Owner:</strong>
    <%= post.user.email %>
    <%= link_to 'View Feed', user_feed_path(post.user) %>
  </p>

  <% if post.image.attached? %>
    <%= image_tag post.image %>
  <% end %>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>
</div>
