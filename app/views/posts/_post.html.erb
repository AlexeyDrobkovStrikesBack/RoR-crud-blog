<div id="<%= dom_id post %>">
  ___________________________
  <p>
    <strong>Owner:</strong>
    <%= post.user.email %>
  </p>

  <% if post.image.attached? %>
    <%= image_tag post.image %>
  <% end %>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

</div>
